{
  "compilerOptions": {
    "target": "ES2022",

    "resolveJsonModule": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "jsx": "react",
    "esModuleInterop": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
  },
  "exclude": [
    "./src/**/*.test.tsx",
    "./src/**/*.test.ts",
    "./src/**/*.test.jsx",
    "./src/**/*.test.js"
  ]
}
